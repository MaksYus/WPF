<Window x:Class="Wpf_Autorisation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Autorisation"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Форма регистрации" Height="540.945" Width="660.63">
    <Grid Background="#DCDCDC">
        <Border MinWidth="400" MaxWidth="600" CornerRadius="10" Margin="15" Background="White" VerticalAlignment="Center" Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="LightGray"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Регистрация" HorizontalAlignment="Center" Margin="0 0 0 20" FontSize="30" FontWeight="Bold"></TextBlock>
                <Grid>
                    <Button HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatAccentButton}">Регистрация</Button>
                    <Button x:Name="sign_in" HorizontalAlignment="Right" Click="Button_auth_click" >Вход</Button>
                </Grid>
                <TextBox x:Name="LoginBox" materialDesign:HintAssist.Hint="Логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                <PasswordBox x:Name="PassBox" materialDesign:HintAssist.Hint="Пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"></PasswordBox>
                <PasswordBox x:Name="RePassBox" materialDesign:HintAssist.Hint="Повтор пароля" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"></PasswordBox>
                <TextBox x:Name="EmailBox" materialDesign:HintAssist.Hint="Email" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                <Button Click="Button_Registration_Click" Margin="0 10 0 0">Зарегистрироваться</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
